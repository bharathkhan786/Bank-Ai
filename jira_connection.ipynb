    "import pandas as pd\n",
    "import requests\n",
    "from requests.auth import HTTPBasicAuth\n",
    "\n",
    "# Replace with your JIRA instance URL, username, and API token\n",
    "JIRA_URL = ''\n", # https://example.atlassian.net
    "USERNAME = ''\n", # example@gmail.com
    "API_TOKEN = '\n",  # API_TOKEN jira
    "\n",
    "# Define the headers for authentication and content type\n",
    "headers = {\n",
    "    'Accept': 'application/json',\n",
    "    'Content-Type': 'application/json',\n",
    "}\n",
    "\n",
    "# Basic authentication for API requests\n",
    "auth = HTTPBasicAuth(USERNAME, API_TOKEN)\n",
    "\n",
    "# Function to query JIRA with dynamic JQL queries\n",
    "def get_issues(jql_query):\n",
    "    url = f\"{JIRA_URL}/rest/api/2/search\"\n",
    "    params = {\n",
    "        'jql': jql_query,\n",
    "        'fields': 'environment,summary,assignee,priority,status',\n",
    "        'maxResults': 100,\n",
    "    }\n",
    "    \n",
    "    response = requests.get(url, headers=headers, auth=auth, params=params)\n",
    "    # print(response.json())\n",
    "    if response.status_code == 200:\n",
    "        return response.json()\n",
    "    else:\n",
    "        print(f\"Failed to fetch data: {response.status_code} - {response.text}\")\n",
    "        return None\n",
    "\n",
    "# Function to process questions and generate the appropriate JQL query\n",
    "def qa_generate(question):\n",
    "    question = question.lower()\n",
    "    \n",
    "    # Define basic JQL queries based on question keywords\n",
    "    if \"open issues\" in question and \"dev\" in question:\n",
    "        jql_query = \"project=BANK AND status=open\"\n",
    "    elif \"open issues\" in question and \"sit\" in question:\n",
    "        jql_query = \"project=BANK AND status=open\"\n",
    "    elif \"open issues\" in question and \"uat\" in question:\n",
    "        jql_query = \"project=BANK AND status=open\"\n",
    "    elif \"summary of issue statuses\" in question:\n",
    "        jql_query = \"status in (Open, 'In Progress', Done)\"\n",
    "    elif \"pending issues\" in question and \"dev\" in question:\n",
    "        jql_query = \"project=BANK AND status='To Do'\"\n",
    "    elif \"blocked issues\" in question and \"sit\" in question:\n",
    "        jql_query = \"project=BANK AND status='Blocked'\"\n",
    "    elif \"resolved but reopened\" in question and \"uat\" in question:\n",
    "        jql_query = \"project=BANK AND status='Reopened'\"\n",
    "    elif \"high-priority issues\" in question:\n",
    "        jql_query = \"priority in (High) AND status=open\"\n",
    "    elif \"defect tickets\" in question and \"sit\" in question:\n",
    "        jql_query = \"project=BANK AND issuetype='Bug' AND status='In Progress'\"\n",
    "    elif \"enhancements in progress\" in question and \"uat\" in question:\n",
    "        jql_query = \"project=BANK AND issuetype='Improvement' AND status='In Progress'\"\n",
    "    elif \"open and in-progress issues\" in question:\n",
    "        jql_query = \"status in (Open, 'In Progress')\"\n",
    "    elif \"top blockers\" in question and \"sit\" in question:\n",
    "        jql_query = \"project=BANK AND status='Blocked'\"\n",
    "    elif \"top blockers\" in question and \"uat\" in question:\n",
    "        jql_query = \"project=BANK AND status='Blocked'\"\n",
    "    elif \"transitioned from dev to sit\" in question:\n",
    "        jql_query = \"project=BANK AND status=open AND issue in linkedIssuesOf('status', 'SIT')\"\n",
    "    elif \"latest status of issues\" in question and \"[project name]\" in question:\n",
    "        project_name = question.split(\"[\")[1].split(\"]\")[0]  # Extract project name from the question\n",
    "        jql_query = f\"project={project_name} AND status=open\"\n",
    "    elif \"status update of issues\" in question and \"[project name]\" in question:\n",
    "        project_name = question.split(\"[\")[1].split(\"]\")[0]  # Extract project name from the question\n",
    "        jql_query = f\"project={project_name} AND status in (Open, 'In Progress', Done)\"\n",
    "    else:\n",
    "        return \"Sorry, I couldn't understand your question.\"\n",
    "    \n",
    "    # Fetch the issues based on the generated JQL query\n",
    "    issues = get_issues(jql_query)\n",
    "    \n",
    "    if issues and issues.get(\"issues\"):\n",
    "        output = []\n",
    "        for issue in issues[\"issues\"]:\n",
    "            output.append({\n",
    "                    \"Issue Key\": issue['key'],\n",
    "                    \"Summary\": issue['fields']['summary'],\n",
    "                    # \"Assignee\": issue['fields'].get('assignee', {}).get('displayName', 'Unassigned'),\n",
    "                    \"Priority\": issue['fields']['priority']['name'],\n",
    "                    \"Status\": issue['fields']['status']['name'],\n",
    "                    \"Environment\": issue['fields']['environment']\n",
    "                })\n",
    "        \n",
    "        # Convert the data into a pandas DataFrame (table format)\n",
    "        df = pd.DataFrame(output)\n",
    "        \n",
    "        # Return the table\n",
    "        return df\n",
    "    else:\n",
    "        return f\"No issues found for your query: {question}\"\n",
    "\n",
    "# Example usage\n",
    "questions = [\n",
    "    'Can you provide the current status of all open issues in JIRA across DEV, SIT, and UAT environments?',\n",
    "    'Please share a summary of issue statuses for DEV, SIT, and UAT environments in JIRA.',\n",
    "    'What are the pending issues in the DEV environment on JIRA? Please provide their status and key details.',\n",
    "    'Please share the current status of issues in UAT and indicate any critical blockers.',\n",
    "    'Please generate a report of all open and in-progress issues in DEV, SIT, and UAT environments, including their priorities, assignees, and expected resolution dates.',\n",
    "    'Identify any tickets in UAT that were resolved but reopened. Provide their current status.',\n",
    "]\n",
    "\n",
    "# Iterate over questions and fetch answers\n",
    "for question in questions:\n",
    "    print(f\"Question: {question}\\n\")\n",
    "    result = qa_generate(question) \n",
    "    print(result)\n",
    "    print(\"\\n\" + \"-\"*80 + \"\\n\")\n"
   ]
